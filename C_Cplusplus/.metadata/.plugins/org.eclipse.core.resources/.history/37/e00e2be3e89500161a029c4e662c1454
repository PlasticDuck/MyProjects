#include <iostream>
#include <string>
#include <fstream>



class PopulationsFileSaver {
private:
	std::vector<double**> populations;
	std::string destination;
	std::string fileName;
	unsigned int nrDimension;
	unsigned int nrBac;
	double *intervals;

	void intervalsSetting();
public:

#include <iostream>
#include <vector>
#include <stdio.h>
//My includes files
#include "Bacteria.h"


using namespace std;

int main() {
	cout << "!!!START!!!" << endl;
	vector<double> x;
	x.push_back(1.0);x.push_back(1.6);x.push_back(0.1);
	double step=0.1;
	Bacteria bac(x,step);
	bac.printBacteria();
	vector<double> dir=bac.tumbling();
	printf("%ud",dir.size())
	for(unsigned int i=0;i<dir.size();i++){
		printf("%f ",dir[i]);
	}
	cout << "!!!END!!!" << endl;
	return 0;
}

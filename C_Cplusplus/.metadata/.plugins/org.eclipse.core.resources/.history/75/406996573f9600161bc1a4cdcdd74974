#include <iostream>
#include <python2.7/Python.h>
#include <python2.7/import.h>
using namespace std;

int main(int argc, char *argv[]) {
	cout << "Testeles" << endl; // prints Testeles
	Py_SetProgramName(argv[0]);
	Py_Initialize();
	FILE *f=fopen("PyCods/Hello.py","r");
	PyObject *m,*d;
	m=PyImport_AddModule("__import__");
	if(m==NULL) return-1;

	d=PyModule_GetDict(m);
	//PyRun_String("import matplotlib",0,dict,dict);
	PyRun_File(f,"PyCods/Hello.py",Py_file_input,d,d);
	PyErr_Print();
	Py_Finalize();
	fclose(f);
	return 0;
}

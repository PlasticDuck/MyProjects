}

void Bacteria::setStep(double step) {
	this->step = step;
}

double Bacteria::getValue() const {
	return value;
}

void Bacteria::setValue(double value) {
	this->value = value;
}

const std::vector<double>& Bacteria::getX() const {
	return x;
}

void Bacteria::setX(const std::vector<double>& x) {
	this->x = x;
}


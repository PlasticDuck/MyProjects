#ifndef POPULATION_H_
#define POPULATION_H_

#include <vector>
#include <array>
#include "Bacteria.h"

class Population {
private:
	std::vector<Bacteria> bacteries;
	std::array<double,2> array;
	unsigned int nrBac;
	unsigned int dimension;

public:

	Population(unsigned int nrBac,unsigned int dimension,std::vector<std::array<double,2>> intervals);
	void printIntervals();
	Bacteria getRandomBacteria();
	virtual ~Population();
};

#endif /* POPULATION_H_ */
